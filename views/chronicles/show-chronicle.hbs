<div class="row">
    <div class="col s12 m10 l10">
        <h3>{{chronicle.title}}
            <small>{{{editIcon chronicle.user user chronicle._id 'chronicle' false}}}</small>
        </h3>
        <h6>{{formatDate createdAt 'LL'}}</h6>
        <div class="section">
            <div class="card">
                <div class="card-content">
                    {{#if chronicle.freestyleBody}}
                        {{{chronicle.freestyleBody}}}
                    {{/if}}
                    {{#if chronicle.chronologicalBody}}
                        {{#each chronicle.chronologicalBody}}
                            <div class="section">
                                <span>{{this.startDate}} - {{this.endDate}}</span>
                                {{{this.chronologicalText}}}
                            </div>
                            <div class="divider"></div>
                        {{/each}}
                    {{/if}}
                    {{#if chronicle.categoricalBody}}
                        {{#each chronicle.categoricalBody}}
                            <div class="section">
                                <span>{{this.topic}}</span>
                                {{{this.categoricalText}}}
                            </div>
                            <div class="divider"></div>
                        {{/each}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>