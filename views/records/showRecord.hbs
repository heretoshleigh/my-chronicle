<div class="row">
    <div class="col s12 m10 l10">
        <h3>{{record.title}}
            <small>{{{editIcon record.user user record._id 'record' false}}}</small>
        </h3>
        <h6>{{formatDate createdAt 'LL'}}</h6>
        <div class="section">
            <div class="card">
                <div class="card-content">
                    <a href="{{record.filePath}}" class="btn teal darken-1">View file</a>
                    <span class="block section">Record Type: {{record.recordType}}</span>
                    {{#if record.notes}}
                        <span>Notes:</span>
                        {{{record.notes}}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>